<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OverviewFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HSLU MOBPRO"
        android:textSize="14dp" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="Application-Preferences"
        android:textSize="14dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/counterViewElement"
        android:text="MainActivity.onResume wurde seit der Installation dieser App 0 mal aufgerufen."
        android:textSize="14dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/teaPrefereceViewElement"
        android:text="Ich trinke am liebsten  Lipton/Pfefferminztee, mit Rohrzucker gesÃ¼sst"
        android:textSize="14dp" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Edit tea preferences"
        android:id="@+id/setTeaPreferenceButton"></Button>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Set default tea preferences"
        android:id="@+id/setDefaultTeaPreferenceButton"></Button>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="Dateisystem"
        android:textSize="14dp" />

    <CheckBox
        android:id="@+id/cbt_externDataStorage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Externen Speicher benutzen" />

    <TextView
        android:id="@+id/txt_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hier wird der status angezeigt" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Irgendein Text"
        android:textSize="23dp" />

    <EditText
        android:id="@+id/txt_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_save"
            android:layout_width="196dp"
            android:layout_height="wrap_content"

            android:text="Speichern" />
        <Button
            android:id="@+id/btn_load"
            android:layout_width="214dp"
            android:layout_height="wrap_content"

            android:text="Laden" />
    </LinearLayout>
</LinearLayout>